project_pwd() {
  echo -n $PWD | sed -e "s/\/Users\/$USER/~/" -e "s/\/home\/$USER/~/" -e "s/~\/env\/\([^\/]*\)\/current/\\1/" -e "s/~\/Sites\/\([^\/]*\)\/http:\/\/current/\\1/"
}

export PROMPT=$'%{\e[0;90m%}%n@\e[0;30;47m%M%{\e[0m%}
%{\e[0;%(?.32.31)m%}>%{\e[0m%} '
export RPROMPT=$'%{\e[0;90m%}$(project_pwd)$(git_cwd_info)%{\e[0m%}'
